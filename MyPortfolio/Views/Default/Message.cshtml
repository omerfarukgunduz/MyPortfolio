@model Message
<div class="container px-5">
    <!-- Contact form-->
    <div class="bg-light rounded-4 py-5 px-4 px-md-5">
        <div class="text-center mb-5">
            <div class="feature bg-primary bg-gradient-primary-to-secondary text-white rounded-3 mb-3"><i class="bi bi-envelope"></i></div>
            <h1 class="fw-bolder">İletişim</h1>
            <p class="lead fw-normal text-muted mb-0">En kısa sürede geri dönüş yapacağım !</p>
        </div>
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <form asp-action="Message" method="post" id="contact-form">
                    <div class="form-group">
                        <label asp-for="NameSurname">Ad Soyad</label>
                        <br />
                        <input asp-for="NameSurname" class="form-control" required />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Subject">Konu</label> 
                        <br />
                        <input asp-for="Subject" class="form-control" required />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email">E-posta</label>
                        <input asp-for="Email" class="form-control" type="email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MessageDetail">Mesaj Detayı</label>
                        <br />
                        <textarea asp-for="MessageDetail" class="form-control" required></textarea>
                        <span asp-validation-for="MessageDetail" class="text-danger"></span>
                    </div>
                    <br />


                    <button type="submit" class="btn btn-primary">Gönder</button>
                </form>


            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('contact-form').addEventListener('submit', function (event) {
        var form = event.target;
        var inputs = form.querySelectorAll('input');
        var isValid = true;

        for (var i = 0; i < inputs.length; i++) {
            if (!inputs[i].value) {
                isValid = false;
                inputs[i].classList.add('error');
            } else {
                inputs[i].classList.remove('error');
            }
        }

        if (!isValid) {
            event.preventDefault();
        } else {

            window.alert('Mesajınız gönderildi! Mailiniz üzerinden iletişime geçilecektir.');
        }
    });
</script>

<style>
    .error {
        border-color: red;
    }
</style>