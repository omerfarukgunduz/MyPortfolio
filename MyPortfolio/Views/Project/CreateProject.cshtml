@model Project
@{
    ViewData["Title"] = "CreateProject";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projeler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Proje Adı</label>
							<input type="text" asp-for="ProjectName" class="form-control" />
							<br />
							<label>Proje Açıklaması</label>
							<textarea rows="4" class="form-control" asp-for="ProjectDescription"></textarea>
							<br />
							<label>Proje Linki</label>
							<input type="text" asp-for="ProjectLink" class="form-control" />
							<br />
							<label>Proje Görseli</label>
							<textarea rows="4" class="form-control" asp-for="Projectİmage"></textarea>
							<br />
							<button class="btn btn-primary">Projeyi Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

