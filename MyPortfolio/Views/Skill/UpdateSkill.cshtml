@model Skill
@{
    ViewData["Title"] = "UpdateSkill";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yetenekler Listesi</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yetenek Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="SkillId">
							<label>Yetenek Adı</label>
							<input type="text" asp-for="SkillName" class="form-control" />
							<br />
							
							<button class="btn btn-primary">Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>