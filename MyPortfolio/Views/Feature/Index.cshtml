@model List<Feature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

div class="content">
<div class="container-fluid">
	<h4 class="page-title">Öne Çıkanlar</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Öne Çıkanlar Sayfası</div>
				</div>
				<div class="card-body">
					<div class="card-sub">
						Öne çıkanlar bölümü ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
					</div>
					<table class="table mt-3">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Başlık (1.Cümle)</th>
								<th scope="col">Alt Başlık (2.Cümle)</th>
								<th scope="col">Fotoğraf Url</th>
								<th scope="col">Güncelle</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.FeatureId</td>
									<td>@item.Title</td>
									<td>@item.Description</td>
									<td>
										<img src="@item.ImageUrl" alt="Image" width="100" height="100" />
									</td>
									<td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
</div>
