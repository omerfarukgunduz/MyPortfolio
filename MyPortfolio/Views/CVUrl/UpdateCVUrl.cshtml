@model DownloadCV

@{
    ViewData["Title"] = "UpdateCVUrl";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title"></h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">CV Url Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="CVId">
							<label>
								Google drive urlini doğrudan indirilebilir yapmak için <a link href="https://chatgpt.com/share/1ed088d3-ad11-42e6-b4a6-850426641d79">bu sayfayı</a> kullanın.
							</label>
							<label>CV Url</label>

							<input type="text" asp-for="DownloadUrl" class="form-control" />
							<br />
							<button class="btn btn-primary">Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
